<body>
	<h1>The Home Page</h1>
	<br>
	<div>
		<form name="addExercise" onsubmit="return validateDate()">
			<fieldset>
				<legend>Add Exercise</legend>
				<!-- <input id="action" type="hidden" name="action" value="insert"> -->
				<p>Exercise Name: <input id="exerciseName" type="text" name="exerciseName" required></p>
				<p>Repetitions: <input id="reps" type="number" name="reps" min="1"></p>
				<p>Weight: <input id="weight" type="number" name="weight" min="1"><input type="radio" id="lbs" name="lbskg" value=1>lbs. <input type="radio" id="kg" name="lbskg" value=0>kg.</p>
				<p>Date Performed (month/day/year): <input id="month" type="number" name="month" min="1" max="12">/<input id="day" type="number" name="day" min="1" max="31">/<input id="year" type="number" name="year" size="4"></p>
			</fieldset>
			<input type="submit" id="newExerciseSubmit" value="Add Exercise">
		</form>
	</div>
	<p>{{results}}</p>
		<div>
			<table id="wot">
				<tr>
					<th>Exercise Name</th>
					<th>Reps</th>
					<th>Weight</th>
					<th>Unit</th>
					<th>Date Completed</th>
				</tr>
				{{#each workoutDB}}
				<tr>
					<td>{{this.name}}</td>
					<td>{{this.reps}}</td>
					<td>{{this.weight}}</td>
					<td>{{this.date}}</td>
					<td>{{this.lbs}}</td>
					<td><button type="button" name="updateExercise" value={{this.id}}>Update</button></td>
					<td><button type="button" name="deleteExercise" value={{this.id}}>Delete</button></td>
				</tr>
				{{/each}}
			</table>
		</div>
<script src="/addExercise.js" type="text/javascript"></script>
</body>